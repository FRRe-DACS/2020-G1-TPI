                    <br/>
                    <br/>
                </div>


                <label>Otros</label>
                <input type="text" id="OtrosDetalleSintomas" name="OtrosDetalleSintomas" placeholder="Especificar"/>
            </fieldset>





            <div id="boton">
                <input type="submit" value="Enviar Formulario" id="botonEnviar" @onclick="enviar"/>
            </div>
                
        </form>
        
    </div>

