<link rel="stylesheet" href="/styles/estilosIF.css">
<div id="app">
        <form id="formulario" @submit.prevent="enviar">
            <h2>Formulario de notificación de Coronavirus</h2>
            <fieldset>
                <legend>Datos personales</legend>
                <div>
                    <div class="field">
                        <label class="label">Apellido</label>
                        <div class="control">
                            <input v-model="apellido" class="input" type="text" placeholder="Apellido">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Nombre</label>
                        <div class="control">
                            <input v-model="nombre" class="input" type="text" placeholder="Nombre">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">DNI</label>
                        <div class="control">
                            <input v-model="dni" class="input" type="number" placeholder="">
                        </div>
                    </div>
                </div>  
                <div>
                    <div class="field">
                        <label class="label">Fecha de nacimiento</label>
                        <div class="control">
                            <input v-model="fechaNacimiento" class="input" type="date" value="fechaNacimiento">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Edad</label>
                        <div class="control">
                            <input v-model="edad" class="input" type="text" placeholder="">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label" for="">Sexo</label>
                        <div class="control">
                          <select v-model='sexo'>
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                          </select>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="field">
                        <label class="label">Correo electronico</label>
                        <div class="control">
                            <input v-model="email" class="input" type="email" placeholder="example@example.com">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Telefono</label>
                        <div class="control">
                            <input v-model="telefono" class="input" type="text" placeholder="">
                        </div>
                    </div>
                </div>
                <!-- Direccion (Calle|NroCalle|Dpto|NroDpto|Piso|LocalidadId|Localidad|Provincia) -->
                <!-- Poner en formato direccion como tenemos definido en la BD-->
                <div class="field">
                    <label class="label">Dirección ### CORREGIR</label>
                    <div class="control">
                        <input v-model="direccion" class="input" type="text" placeholder="">
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="">Provincia</label>
                    <div class="control">
                      <select v-model="provincia" class="form-control" id="provincia" @click='mostrar'>
                        <option v-for="(provincia,index) in provincias">{{provincias[index].nombre}}</option>
                    </select>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Localidad</label>
                    <div class="control">
                        <select v-model="localidad" class="form-control" id="localidad" @click='mostrar'>
                          <option v-for="(localidad,index) in localidades">{{localidades[index].nombre}}</option>
                      </select>
                      </div>
                </div>
                <!-- ##### CORREGIR ######-->
                <div class="field">
                    <label class="label">Codigo Postal ### CP ya esta dentro de la localidad</label>
                    <div class="control">
                        <input v-model="cp" class="input" type="text" placeholder="">
                    </div>
                </div>
            </fieldset>





